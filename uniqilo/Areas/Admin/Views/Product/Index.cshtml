﻿@using uniqilo.Models
@model List<Product>
@{
    
    ViewData["Title"] = "Index";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Product List</h6>
            <a asp-action="Create" asp-controller="Product" class="btn btn-outline-primary ml-auto">Create</a>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">ProductName</th>
                        <th scope="col">ProductDescription</th>
                        <th scope="col">CostPrice</th>
                        <th scope="col">SellPrice</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Discount</th>
                        <th scope="col">CategoryName</th>
                        <th colspan="3" scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><img asp-append-version="true" src="~/img/products/@item.CoverImage" width="50" /></td>
                            <td>@item.ProductName</td>
                            <td>@item.ProductDescription</td>
                            <td>@item.CostPrice</td>
                            <td>@item.SellPrice</td>
                            <td>@item.Quantity</td>
                            <td>@item.Discount</td>
                            <td>@item.Category?.CategoryName</td>
                            <td>
                                <a class="btn btn-success" asp-action="Update" asp-controller="Product" asp-route-id="@item.Id">Update</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
                            </td>
                            @if (!item.IsDeleted)
                            {
                                <td>
                                    <a class="btn btn-secondary" asp-action="Hide" asp-controller="Product" asp-route-id="@item.Id">Hide</a>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <a class="btn btn-warning" asp-action="Show" asp-controller="Product" asp-route-id="@item.Id">Show</a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</div>